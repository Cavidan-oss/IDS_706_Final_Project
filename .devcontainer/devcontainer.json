{
  "name": "My Dev Container",
  "dockerFile": "Dockerfile",
  "features": {
      "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
      "vscode": {
          "extensions": [
              "ms-python.python",
              "ms-python.vscode-pylance",
              "ms-python.autopep8"
          ]
      }
  },
  "postCreateCommand": "pip install -r requirements.txt",
  "forwardPorts": [4040, 8501],
  "remoteUser": "vscode"
}